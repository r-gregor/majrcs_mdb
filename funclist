}


crtice() {
	printf "%$(tput cols)s\n" | tr " "  "-"
}


# function that displays varius date & time formated info
zdaj() {
	# clear the sreen
	clear
	zdSI=$(date +%A,\ %d.\ %B\ %Y,\ %H:%M:%S)
	echo -n "${zdSI}"
	echo -e "\n"

}

# --------------------------------------------------------

dejt() {
	dejt=$(date +%Y%m%d%H%M)
	echo $dejt
}

db0() {
	dropbox stop
}

db1() {
	dbus-launch dropbox start -i &>/dev/null
}


dbs1() {
	watch -n1 dropbox status
}


dbs2() {
  clear
  while true; do
    echo -en "$(dropbox status) \r"
    sleep 1
  done
}
