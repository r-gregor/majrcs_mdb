# TESTw
nifs() {
	echo -n "setting IFS to newline ..."
	IFS=$'\n'
	echo " done."
}

oifs() {
	echo -n "setting IFS to original value ..."
	IFS=$' \t\n'
	echo " done."
}

# updated 20260105
ncd() {
	if [ $# -eq 1 ]; then
		DEST="$1"
	else
		DEST="."
	fi

	cd $(find "${DEST}" -type d \( -not -name ".git" -o -not -name ".cache" \) | fzf -e)
}

